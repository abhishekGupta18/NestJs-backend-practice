generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id               String             @id @default(uuid())
  first_name       String
  last_name        String
  email            String             @unique
  contact_number   String?
  created_at       DateTime           @default(now())
  updated_at       DateTime           @updatedAt
  deleted_at       DateTime?
  orders           orders[]
  user_permissions user_permissions[]
  user_roles       user_roles[]
}

model roles {
  id               String             @id @default(uuid())
  role_name        String             @unique
  created_at       DateTime           @default(now())
  role_permissions role_permissions[]
  user_roles       user_roles[]
}

model permissions {
  id               String             @id @default(uuid())
  permission_name  String             @unique
  created_at       DateTime           @default(now())
  role_permissions role_permissions[]
  user_permissions user_permissions[]
}

model user_roles {
  user_id String
  role_id String
  role    roles  @relation(fields: [role_id], references: [id], onDelete: Cascade)
  user    users  @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@id([user_id, role_id])
}

model role_permissions {
  role_id       String
  permission_id String
  permission    permissions @relation(fields: [permission_id], references: [id], onDelete: Cascade)
  role          roles       @relation(fields: [role_id], references: [id], onDelete: Cascade)

  @@id([role_id, permission_id])
}

model user_permissions {
  user_id       String
  permission_id String
  permission    permissions @relation(fields: [permission_id], references: [id], onDelete: Cascade)
  user          users       @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@id([user_id, permission_id])
}

model categories {
  id                 String               @id @default(uuid())
  category_name      String               @unique
  created_at         DateTime             @default(now())
  updated_at         DateTime             @updatedAt
  product_categories product_categories[]
}

model products {
  id                 String               @id @default(uuid())
  product_name       String
  stock              Int
  rating             Float?
  price_cent         Int
  created_at         DateTime             @default(now())
  updated_at         DateTime             @updatedAt
  deleted_at         DateTime?
  order_items        order_items[]
  product_categories product_categories[]
}

model product_categories {
  product_id  String
  category_id String
  category    categories @relation(fields: [category_id], references: [id], onDelete: Cascade)
  product     products   @relation(fields: [product_id], references: [id], onDelete: Cascade)

  @@id([product_id, category_id])
}

model orders {
  id               String        @id @default(uuid())
  user_id          String
  order_status     OrderStatus   @default(PENDING)
  total_price_cent Int
  created_at       DateTime      @default(now())
  updated_at       DateTime      @updatedAt
  order_items      order_items[]
  user             users         @relation(fields: [user_id], references: [id], onDelete: Cascade)
}

model order_items {
  id                String   @id @default(uuid())
  order_id          String
  product_id        String
  quantity          Int
  price_at_purchase Int
  orders            orders   @relation(fields: [order_id], references: [id], onDelete: Cascade)
  products          products @relation(fields: [product_id], references: [id], onDelete: Cascade)
}

model audit_logs {
  id              Int       @id @default(autoincrement())
  event_timestamp DateTime? @default(now()) @db.Timestamptz(6)
  requested_api   String?   @db.VarChar(255)
  app_version     String?   @db.VarChar(50)
  system_name     String?   @db.VarChar(100)
  system_version  String?   @db.VarChar(50)
  user_agent      String?
  ip_address      String?   @db.VarChar(45)
  country         String?   @db.VarChar(100)
  host_name       String?   @db.VarChar(255)
  table_name      String?   @db.VarChar(100)
  operation_type  String?   @db.VarChar(50)
  severity        String?   @db.VarChar(20)
  description     String?
  details         Json?
  created_at      DateTime? @default(now()) @db.Timestamptz(6)

  @@index([country], map: "idx_audit_logs_country")
  @@index([event_timestamp], map: "idx_audit_logs_event_timestamp")
  @@index([requested_api], map: "idx_audit_logs_requested_api")
  @@index([severity], map: "idx_audit_logs_severity")
  @@index([table_name, operation_type], map: "idx_audit_logs_table_operation")
}

model db_audit_logs {
  id              Int       @id @default(autoincrement())
  event_timestamp DateTime? @default(now()) @db.Timestamptz(6)
  table_name      String    @db.VarChar(100)
  operation_type  String    @db.VarChar(10)
  db_user         String?   @db.VarChar(100)
  db_name         String?   @db.VarChar(100)
  old_value       Json?
  new_value       Json?
  triggered_by    String?   @default(dbgenerated("CURRENT_USER"))
}

model otp_codes {
  id         String   @id @default(uuid())
  email      String   @unique
  otp_code   String
  expires_at DateTime
  is_used    Boolean  @default(false)
  created_at DateTime @default(now())

  @@index([email])
}

model media_files{
  id String @id @default(uuid())
  entity_type MediaFileEntityType
  entity_id String @db.VarChar(50)
  s3_key String @db.VarChar(255)
  access_level String @db.VarChar(50) @default("PRIVATE")
  status String @db.VarChar(50) @default("PENDING")
  deleted_at DateTime?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  image_attribute    image_attributes?    // Optional: Only exists if it's an image
  document_attribute document_attributes? // Optional: Only exists if it's a doc
  @@index([entity_id])
}

model image_attributes{
  id String @id @default(uuid())
  media_file_id String @unique
  image_type MediaFileType 
  image_name String? @db.VarChar(255)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  media_file media_files @relation(fields: [media_file_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
}
model document_attributes{
  id String @id @default(uuid())
  media_file_id String @unique
  document_type MediaFileType 
  document_name String @db.VarChar(255)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  media_file media_files @relation(fields: [media_file_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
}

enum OrderStatus {
  PENDING
  PAID
  SHIPPED
  CANCELLED
}

enum MediaFileEntityType {
  USER
  PRODUCT
  ORDER
}

enum MediaFileType {
  PROFILE_IMAGE
  COVER_IMAGE
  PRODUCT_IMAGE_MAIN
  PRODUCT_IMAGE_VARIANT
  INVOICE
  RECEIPT
}

enum AccessLevel {
  PRIVATE
  PUBLIC
}

enum ImageType {
  MAIN
  VARIANT
}