{
  "name": "nestjs-boilerplate",
  "version": "1.0.0",
  "description": "This contains the base setup for the nestjs application with common modules",
  "author": "Suresh Konakanchi",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "npm run generate:openapi-spec && dredd",
    "allow:permission": "sudo chmod -R 777 ./data",
    "db:dev:rm": "docker-compose down --volumes --remove-orphans",
    "db:dev:up": "docker-compose up -d",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "generate:client": "npm install @openapitools/openapi-generator-cli -g && openapi-generator-cli generate -i http://localhost:3000/api-json -g typescript-fetch -o ./client_sdk",
    "generate:openapi-spec": "curl http://localhost:3000/api-json -o openapi.json",
    "prisma:dev:deploy": "npx prisma migrate deploy --schema=./src/db/prisma/schema.prisma",
    "prisma:migrate": "npx prisma migrate dev --schema=./src/db/prisma/schema.prisma",
    "prisma:new-migration": "npx prisma migrate dev --schema=./src/db/prisma/schema.prisma --create-only",
    "prisma:reset": "npx prisma migrate reset --schema=./src/db/prisma/schema.prisma",
    "prisma:dbpull": "npx prisma db pull --schema=./src/db/prisma/schema.prisma",
    "prisma:studio": "npx dotenv-cli -e .env -- npx prisma studio --schema=./src/db/prisma/schema.prisma",
    "prisma:generate": "npx prisma generate --schema=./src/db/prisma/schema.prisma",
    "prisma:setup": "npm run prisma:migrate && npm run prisma:dbpull && npm run prisma:generate"
  },
  "dependencies": {
    "@apollo/server": "^4.11.0",
    "@aws-sdk/client-s3": "^3.675.0",
    "@aws-sdk/client-sns": "^3.675.0",
    "@aws-sdk/s3-request-presigner": "^3.675.0",
    "@azure/storage-blob": "^12.25.0",
    "@google-cloud/storage": "^7.13.0",
    "@nestjs/apollo": "^12.2.0",
    "@nestjs/axios": "^3.1.0",
    "@nestjs/bullmq": "^10.2.1",
    "@nestjs/cache-manager": "^2.2.2",
    "@nestjs/common": "^10.4.6",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.4.6",
    "@nestjs/devtools-integration": "^0.1.6",
    "@nestjs/event-emitter": "^2.0.4",
    "@nestjs/graphql": "^12.2.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/platform-express": "^10.4.6",
    "@nestjs/schedule": "^4.1.1",
    "@nestjs/swagger": "^7.4.2",
    "@nestjs/terminus": "^10.2.3",
    "@nestjs/throttler": "^6.2.1",
    "@prisma/client": "^5.21.1",
    "@willsoto/nestjs-prometheus": "^6.0.1",
    "axios": "^1.7.7",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.3",
    "bullmq": "^5.21.2",
    "cache-manager": "^5.7.6",
    "cache-manager-redis-yet": "^5.1.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cloudinary": "^2.5.1",
    "dotenv-cli": "^7.4.2",
    "fs-extra": "^11.2.0",
    "graphql": "^16.9.0",
    "graphql-subscriptions": "^2.0.0",
    "graphql-upload": "^15.0.2",
    "helmet": "^8.0.0",
    "ioredis": "^5.4.1",
    "joi": "^17.13.3",
    "nest-winston": "^1.9.7",
    "opossum": "^8.1.4",
    "path": "^0.12.7",
    "pg": "^8.13.0",
    "prom-client": "^15.1.3",
    "redoc-express": "^2.1.0",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^5.0.10",
    "rxjs": "^7.8.1",
    "uuid": "^9.0.1",
    "winston": "^3.15.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.5",
    "@nestjs/schematics": "^10.2.2",
    "@nestjs/testing": "^10.4.5",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.8.1",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "dredd": "^14.1.0",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "graphql-type-json": "^0.3.2",
    "prettier": "^3.3.3",
    "prisma": "^5.21.1",
    "prisma-nestjs-graphql": "^20.0.3",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.6.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
