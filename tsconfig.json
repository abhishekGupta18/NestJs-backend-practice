{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "moduleResolution": "Node",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "maxNodeModuleJsDepth": 20,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "baseUrl": "./src",
    "paths": {
      "@common/*": ["common/*"],
      "@middlewares/*": ["middlewares/*"],
      "@interceptors/*": ["interceptors/*"],
      "@config/*": ["config/*"],
      "@logger/*": ["logger/*"],
      "@db/*": ["db/*"],
      "@bg/*": ["background/*"],
      "@cron/*": ["background/cron/*"],
      "@email-queue/*": ["background/queue/email/*"],
      "@media-upload-queue/*": ["background/queue/media-upload/*"],
      "@metrics/*": ["api/metrics/*"],
      "@health/*": ["api/health/*"]
    }
  }
}
